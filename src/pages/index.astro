---
import BlogLayout from '@/layouts/BlogLayout.astro'
import BlogList from '@/components/BlogList.astro'

import { getPosts } from '@/utils'

const title = 'Guilherme Nicolini Blog'
const description = 'Guilherme Nicolini Blog'
const url = 'https://guilhermenicolini.com.br'

const allMarkdownPosts = await Astro.glob<any>('./**/*.mdx')

const allPosts = getPosts(allMarkdownPosts, import.meta.env.LOCALE)
---
<BlogLayout {title} {description} {url}>
  <BlogList allPosts={allPosts} posts={allPosts} />
</BlogLayout>
