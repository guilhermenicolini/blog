---
import { getPosts } from '@/utils'
import BlogLayout from '@/layouts/BlogLayout.astro'
import BlogList from '@/components/BlogList.astro'

const title = 'Tags - Guilherme Nicolini Blog'
const description = 'Guilherme Nicolini Blog'
const url = 'https://guilhermenicolini.com.br'

const allMarkdownPosts = await Astro.glob<any>('../**/*.mdx')
const posts = getPosts(allMarkdownPosts, import.meta.env.LOCALE)
---

<BlogLayout {title} {description} {url}>
  <BlogList allPosts={posts} posts={[]} />
</BlogLayout>
