---
import { TagModel } from '@/models'
interface Props {
  tag: TagModel
}

const { tag } = Astro.props
---
<a href={`/tags/${tag.slug}`} class=`tag ${tag.selected ? 'selected' : ''}`>
  <span class="tag-name">{tag.tag}</span>
  <div class="tag-total">{tag.total}</div>
</a>

<style>
  .tag {
    font-weight: 600;
    display: flex;
    align-items: center;
    border-radius: 0.25em;
    margin: 0.875em 0.75em 0 0;
    cursor: pointer;
    transition: background-color 100ms linear;
    gap: 0;
  }

  .tag:focus {
    outline-width: 2px;
    outline: 2px auto var(--theme-text);
    outline-offset: 3px;
    border-radius: .25em;
  }

  .tag:hover,
  .tag:focus {
    background-color: var(--theme-primary);
    text-decoration: none;
  }

  .tag .tag-name {
    padding: 0 0.5em;
    border-right: none;
    border: 1px solid var(--theme-text);
    border-radius: 0.25em 0 0 0.25em;
    color: var(--theme-text);
  }

  .tag.selected .tag-name {
    background-color: var(--theme-primary);
  }

  .tag .tag-total {
    display: flex;
    align-items: center;
    font-size: 0.8em;
    background-color: var(--theme-text);
    color: var(--theme-background);
    border-radius: 0 0.25em 0.25em 0;
    padding: 0 0.5em;
    align-self: stretch;
  }
</style>
