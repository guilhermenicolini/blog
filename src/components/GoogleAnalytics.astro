---
import { languages, getLanguage } from '@/i18n'
const language = getLanguage(import.meta.env.LOCALE)
---
<!-- Google tag (gtag.js) -->
{ language === languages.pt && <script async src="https://www.googletagmanager.com/gtag/js?id=G-R1K2VTJXM1"></script> }
{ language === languages.pt &&
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-R1K2VTJXM1');
  </script>
}
{ language !== languages.pt && <script async src="https://www.googletagmanager.com/gtag/js?id=G-NYXCCR78FL"></script> }
